<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <title>Weather app</title>
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'
    />
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm'
      crossorigin='anonymous'
    ></script>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='css/h.css' />
  </head>
  <body>

    {{>navbar}}
    <!-- Header Start -->
    <div class='container-fluid mainweather'>
      <div class='row'>
        <div class='col-md-10 col-12 mx-auto align-items-center'>
          <div class='searchbar'>
            <form class='temp-form'>
              <input
                type='text'
                id='cityName'
                autocomplete='off'
                placeholder='Enter the City here'
              />
              <input type='submit' id='submitbtn' />
            </form>
          </div>
          <div class='row'>
            <div class='col-md-10 col-12 mx-auto align-items-center'>
              <div class='wrapper'>
                <div class='card'>
                  <div class='uppersection'>

                    <p id="day">Tuesday</p>
                    <p id="date">18 oct</p>
                  </div>
                  <div class='mainSide'>
                    <p id="city_name">Get Output here</p>
                    <div class='data-hide'>
                      <div class='tempe'>
                        <p> <span id='temp'>0</span><sup>o</sup>C</p>
                      </div>
                      <div class='icon'>
                        <p id="temp_status"><i class='fa fa-cloud cloud' aria-hidden='true'></i></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{>footer}}
    {{! <div class='footer'>
      <p>Created by Abduurehman</p>
    </div> }}

    <script
      src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js'
      integrity='sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p'
      crossorigin='anonymous'
    ></script>
    <script src="js/main.js" ></script>
    <script>
      const day =document.getElementById('day');
      const date = document.getElementById('date')
        const getCurrentDay=()=>{
          let weekDay =new Array(7);
{{!-- For Days --}}
            weekDay[0]="Sunday"
            weekDay[1]="Monday"
            weekDay[2]="Tuesday"
            weekDay[3]="Wednesday"
            weekDay[4]="Thursday"
            weekDay[5]="Friday"
            weekDay[6]="Saturday"
            {{!-- For Monsths --}}
          let weekMon =new Array(12);
            
            weekMon[1]="January"
            weekMon[2]="Februry"
            weekMon[3]="March"
            weekMon[4]="April"
            weekMon[5]="May"
            weekMon[6]="June"
            weekMon[7]="July"
            weekMon[8]="August"
            weekMon[9]="September"
            weekMon[10]="October"
            weekMon[11]="November"
            weekMon[12] = "December"



            {{!-- *Logic --}}
           let currenttime = new Date();
          
          let days = weekDay[currenttime.getDay()];
            day.innerText = days;
            let Curdate = currenttime.getDate();
            let month = weekMon[currenttime.getMonth()+1];
            date.innerText = Curdate + month;
      }
      getCurrentDay();
    </script>
  </body>
</html>